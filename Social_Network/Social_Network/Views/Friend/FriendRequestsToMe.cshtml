@model Social_Network.ViewModels.PageFriendRequestsViewModel

@foreach (var user in Model.Friendships.ToList())
{
    <div>
        <table class="tableUsers">
            <tr>
                <td class="mainTd">
                    @if (@user.UserMain.ProfileImage != null)
                    {
                        <div class="imageDiv">
                            <img class="profileImage" src="@user.UserMain.ProfileImage" />
                        </div>
                    }
                </td>
                <td class="secondTd">
                    <a style="padding: 0%" asp-controller="Profile" asp-action="UserProfile" asp-route-userId="@user.UserMainId">
                        <h3>@user.UserMain.UserName</h3>
                    </a>
                </td>
                <td class="secondTd">
                    <a asp-controller="Friend" asp-action="AddToFriend" asp-route-userId="@user.UserMainId" class="btn btn-outline-dark">
                        Add to friend
                    </a>
                </td>
                <td class="secondTd">
                    <a asp-controller="Friend" asp-action="DeleteFromFriend" asp-route-userId="@user.UserMainId" class="btn btn-outline-dark">
                        Reject friendship
                    </a>
                </td>
            </tr>
        </table>

    </div>
    <br />
}
@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="FriendRequestsToMe"
       asp-route-pageNum="@(Model.PageViewModel.PageNumber - 1)"
       class="btn btn-outline-dark">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Previous
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="FriendRequestsToMe"
       asp-route-pageNum="@(Model.PageViewModel.PageNumber + 1)"
       class="btn btn-outline-dark">
        Next
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
} 